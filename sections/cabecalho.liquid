<style>
  #cabecalho {
      display: grid;
      grid-template-rows: repeat(2, max-content);
      gap: 3rem;
      padding: 2rem 16dvw;
      background-color: {{ section.settings.background_color | default: '#ffffff' }};
      color: {{ section.settings.text_color | default: '#000000' }} !important;
    }

    #cabecalho > div,
    #cabecalho > div > a > picture {
      display: grid;
    }

    #cabecalho > div {
      grid-template-columns: repeat(2, max-content);
      gap: 2rem;
      justify-content: space-between;
      align-items: center;
    }

    #cabecalho > div > a {
      display: grid;
      font-size: 32px;
      font-weight: bold;
      color: {{ section.settings.text_color | default: '#000000' }} !important;
    }

    #cabecalho > div > a > picture > img {
     object-fit: contain;
    }

    #cabecalho > div > nav {
      display: grid;
      grid-auto-flow: column;
      grid-auto-columns: max-content;
      gap: 1rem;
    }

    #cabecalho > div > nav > span {
      font-size: 16px;
      text-transform: uppercase;
      padding: 1rem;
      margin: 0;
      cursor: pointer;
      font-weight: bold;
      border-radius: 0.5rem;
      transition: all 0.1s ease;
    }

    #cabecalho > div > nav > span:hover {
      background-color: #ffffff6b;
    }

    #cabecalho > ul {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(0, max-content));
      list-style-type: none;
      gap: 1rem;
      padding: 0;
      margin: 0;
    }

    #cabecalho > ul > li {
      display: grid;
      padding: 0;
      margin: 0;
    }

    #cabecalho > ul > li > a {
      padding: 0.6rem 2rem;
      border-radius: 2.5rem;
      color: {{ section.settings.text_color | default: '#000000' }} !important;
      text-decoration: none;
      font-size: 16px;
      transition: all 0.1s ease;
    }

    #cabecalho > ul > li > .current_link {
      border: 1px solid {{ section.settings.text_color }};
      background-color: #ffffff6b;
    }

    #cabecalho > ul > li > .current_link:hover {
      background-color: transparent;
    }

    #cabecalho > ul > li > a:hover {
      background-color: #ffffff6b;
    }
</style>

<script src="{{ 'cabecalho.js' | asset_url }}" defer></script>

<header id="cabecalho">
  <div>
    {% if section.settings.logo_desktop != blank or section.settings.logo_mobile != blank %}
      <a href="/">
        <picture>
          {% if section.settings.logo_mobile != blank %}
            <source
              media="(max-width: 768px)"
              srcset="{{ section.settings.logo_mobile | image_url:  height: 60 }}"
              width="120"
              height="60"
            >
          {% endif %}
          <img
            src="{{ section.settings.logo_desktop | image_url: width: 90, height: 90 }}"
            alt="{{ shop.name }}"
            width="90"
            height="90"
          >
        </picture>
      </a>
    {% else %}
      <a href="/">{{ shop.name }}</a>
    {% endif %}

    <nav>
      <span>BRL</span>
      <span>PT</span>
    </nav>
  </div>

  {% if section.settings.menu %}
    <ul>
      {% for link in section.settings.menu.links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</header>

{% schema %}
{
  "name": "Cabeçalho",
  "limit": 1,
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_desktop",
      "label": "Logo (desktop)"
    },
    {
      "type": "image_picker",
      "id": "logo_mobile",
      "label": "Logo (mobile)"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Cor de fundo",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor do texto",
      "default": "#000000"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu cabeçalho"
    }
  ],
  "presets": [
    {
      "name": "Cabeçalho"
    }
  ]
}
{% endschema %}
