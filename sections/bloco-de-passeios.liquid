<style>
  #bloco_de_passeios {
    display: grid;
    grid-template-rows: repeat(4, max-content);
    gap: 1rem;
    padding: 2rem 16dvw;
  }

  #bloco_de_passeios > h1 {
    font-size: 24px;
    font-weight: bold;
    padding: 0;
    margin: 0;
  }

  #bloco_de_passeios > p {
    font-size: 16px;
    padding: 0;
    margin: 0;
  }

  #bloco_de_passeios > .primeiros-dois {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  #bloco_de_passeios > .ultimos-tres {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  #bloco_de_passeios > ul > li {
    display: grid;
    padding: 0;
    margin: 0;
  }

  #bloco_de_passeios > ul > li > a {
    padding: 1.5rem 1rem;
    color: white;
    text-decoration: none;
    border-radius: 1rem;
    font-size: 21px;
    font-weight: bold;
    background-size: cover;
    background-position: center;
    min-height: 265px;
  }
</style>

<section id="bloco_de_passeios">
  {% unless section.settings.title == blank %}
    <h1>{{ section.settings.title }}</h1>
  {% endunless %}

  {% unless section.settings.description == blank %}
    {{ section.settings.description }}
  {% endunless %}

  {% if section.blocks.size > 0 %}
    <ul class="primeiros-dois">
      {% for block in section.blocks limit: 2 %}
        <li>
          <a
            {% if block.settings.image %}
              style="background-image: url('{{ block.settings.image | image_url: height: 265 }}');"
            {% endif %}
          >
            {{- block.settings.product.title -}}
          </a>
        </li>
      {% endfor %}
    </ul>

    {% if section.blocks.size > 2 %}
      <ul class="ultimos-tres">
        {% for block in section.blocks offset: 2 %}
          <li>
            <a
              {% if block.settings.image %}
                style="background-image: url('{{ block.settings.image | image_url: height: 265 }}');"
              {% endif %}
            >
              {{- block.settings.product.title -}}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endif %}
</section>

{% schema %}
{
  "name": "Bloco de passeios",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título do bloco"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descrição do bloco"
    }
  ],
  "blocks": [
    {
      "type": "Products",
      "name": "products",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem do passeio"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Passeio"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bloco de passeios"
    }
  ]
}
{% endschema %}
